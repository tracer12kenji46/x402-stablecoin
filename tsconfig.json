{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@x402/sdk": ["./packages/sdk/src"],
      "@x402/core": ["./x402"]
    }
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist",
    "cli",
    "contracts",
    "examples",
    "facilitator",
    "packages",
    "sperax",
    "web-app",
    "x402",
    "yield-tracker"
  ]
}
